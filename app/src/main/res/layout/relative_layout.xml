<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="123456789"
         android:textSize="60dp"
         android:padding="30dp"
         android:gravity="right"
         android:textColor="@color/white"
         android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="100">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="C"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="+/-"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="%"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="/"
                android:textSize="60dp"
                android:gravity="center"
                android:backgroundTint="#FF9800"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="100">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="7"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="8"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="9"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:backgroundTint="#FF9800"
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="X"
                android:textSize="60dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="100">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="4"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="5"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="6"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:backgroundTint="#FF9800"
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="-"
                android:textSize="60dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="100">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="1"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="2"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="3"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:backgroundTint="#FF9800"
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="+"
                android:textSize="60dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="100">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="13.3"
                android:padding="30dp"
                android:text="0"
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="."
                android:textSize="60dp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/textview_border"
                android:backgroundTint="#FF9800"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="30dp"
                android:text="="
                android:textSize="60dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>